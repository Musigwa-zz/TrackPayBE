{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "fetch": false,
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": false
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-use-before-define": "error",
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "^_",
        "argsIgnorePattern": "^_"
      }
    ],
    "quotes": "error",
    "eol-last": ["error", "always"],
    "one-var": "off",
    "one-var-declaration-per-line": "off",
    "new-cap": "off",
    "consistent-return": "off",
    "no-useless-catch": "off",
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "global-require": "off",
    "arrow-body-style": [0, "as-needed"],
    "no-shadow": ["error", { "hoist": "functions" }],
    "curly": ["error", "multi-line"],
    "arrow-parens": 0,
    "object-curly-newline": 0
  }
}
